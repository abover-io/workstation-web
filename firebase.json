{
  "functions": {
    "source": ".",
    "predeploy": [
      "yarn --prefix \"$PROJECT_DIR\" install",
      "yarn --prefix \"$PROJECT_DIR\" build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsFunc"
      }
    ]
  }
}
