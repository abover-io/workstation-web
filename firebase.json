{
  "functions": {
    "source": ".",
    "predeploy": [
      "yarn install",
      "yarn build"
    ],
    "runtime": "nodejs8"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsFunc"
      }
    ]
  }
}
